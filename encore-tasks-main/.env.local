# Приоритет базы данных (mysql, postgresql, tempdb, sqlite)
DATABASE_PRIORITY=sqlite

# Конфигурация базы данных SQLite
SQLITE_DB_PATH=./database.sqlite

# Конфигурация базы данных MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=password
MYSQL_DATABASE=encore_tasks
MYSQL_SSL=false
MYSQL_CONNECTION_LIMIT=20
MYSQL_ACQUIRE_TIMEOUT=60000
MYSQL_TIMEOUT=60000

# Конфигурация базы данных PostgreSQL (резервная)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=encore_tasks_db
DB_USER=postgres
DB_PASSWORD=postgres

# JWT конфигурация
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_EXPIRES_IN=7d

# Конфигурация приложения
NEXT_PUBLIC_APP_NAME=Encore Tasks
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_API_URL=http://localhost:3000
NODE_ENV=development

# Настройки безопасности
BCRYPT_ROUNDS=12

# Настройки сессий
SESSION_TIMEOUT=86400000

# Настройки файлов
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt

# Настройки уведомлений
ENABLE_EMAIL_NOTIFICATIONS=false
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@encore-tasks.com