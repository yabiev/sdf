# PostgreSQL Database Configuration
DATABASE_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=encore_tasks
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false

# PostgreSQL Connection Settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=encore_tasks
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_SSL=false

# Connection Pool Settings
POSTGRES_MAX_CONNECTIONS=20
POSTGRES_IDLE_TIMEOUT=30000
POSTGRES_CONNECTION_TIMEOUT=2000

# Database URL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/encore_tasks

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3002
NEXT_PUBLIC_API_URL=http://localhost:3002
NEXTAUTH_URL=http://localhost:3002
NEXTAUTH_SECRET=your-nextauth-secret-key-development

# JWT Secret
JWT_SECRET=your-jwt-secret-key-development

# Session Configuration
SESSION_SECRET=your-session-secret-development
SESSION_EXPIRES_IN=7d

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Development/Production Mode
NODE_ENV=development