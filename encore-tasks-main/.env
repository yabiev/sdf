# PostgreSQL Database Configuration
DATABASE_TYPE=postgresql
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=encore_tasks
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_SSL=false

# Database URL (альтернативный способ подключения)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/encore_tasks

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3002
NEXT_PUBLIC_API_URL=http://localhost:3002
NEXTAUTH_URL=http://localhost:3002
NEXTAUTH_SECRET=your-nextauth-secret-key-development

# JWT Secret
JWT_SECRET=your-jwt-secret-key-development

# Session Configuration
SESSION_SECRET=your-session-secret-development
SESSION_EXPIRES_IN=7d

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Development/Production Mode
NODE_ENV=development