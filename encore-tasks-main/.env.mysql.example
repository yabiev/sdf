# =====================================================
# КОНФИГУРАЦИЯ MYSQL ДЛЯ ENCORE TASKS
# =====================================================

# Основные настройки подключения к MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=encore_tasks_db

# SSL настройки (опционально)
MYSQL_SSL=false
MYSQL_SSL_REJECT_UNAUTHORIZED=true

# Настройки пула соединений
MYSQL_CONNECTION_LIMIT=10
MYSQL_ACQUIRE_TIMEOUT=60000
MYSQL_TIMEOUT=60000

# Отладка (только для разработки)
MYSQL_DEBUG=false

# Приоритет базы данных (mysql, postgresql, tempdb)
DATABASE_PRIORITY=mysql

# Существующие настройки PostgreSQL (сохраняем для совместимости)
POSTGRESQL_HOST=localhost
POSTGRESQL_PORT=5432
POSTGRESQL_USER=postgres
POSTGRESQL_PASSWORD=your_postgresql_password
POSTGRESQL_DATABASE=encore_tasks_db
POSTGRESQL_CONNECTION_LIMIT=10
POSTGRESQL_ACQUIRE_TIMEOUT=60000
POSTGRESQL_TIMEOUT=60000

# JWT настройки
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Настройки приложения
NEXT_PUBLIC_APP_NAME="Encore Tasks"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_API_URL=http://localhost:3000

# Настройки файлов
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Настройки уведомлений
EMAIL_ENABLED=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@encore-tasks.com

# Telegram настройки
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_ENABLED=false

# Настройки безопасности
SESSION_TIMEOUT=86400
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# Настройки логирования
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# Настройки производительности
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# Настройки разработки
NODE_ENV=development
DEBUG=false
VERBOSE_LOGGING=false